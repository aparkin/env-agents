# env-agents Service Credentials Template
# Copy this to ../credentials.yaml and fill in your API keys
# NEVER commit credentials.yaml to version control!

# === SERVICES REQUIRING CREDENTIALS ===

NASA_POWER:
  email: "your-email@example.com"  # NASA POWER registration email
  key: "your-nasa-power-api-key-here"  # Get from: https://power.larc.nasa.gov/common/php/APIApplication.php

US_EIA:
  api_key: "your-eia-api-key-here"  # Get from: https://www.eia.gov/opendata/register.php

EPA_AQS:
  email: "your-email@example.com"  # EPA AQS registration email
  key: "your-epa-aqs-key-here"  # Get from: https://aqs.epa.gov/aqsweb/documents/data_api.html#signup

OpenAQ:
  api_key: "your-openaq-api-key-here"  # Get from: https://docs.openaq.org/docs/getting-started

NOAA_CDO:
  token: "your-noaa-cdo-token-here"  # Get from: https://www.ncdc.noaa.gov/cdo-web/token

# Google Earth Engine (requires service account JSON file)
EARTH_ENGINE:
  service_account: "your-service-account@your-project.iam.gserviceaccount.com"
  service_account_path: "../credentials/your-gee-service-account.json"  # Path to JSON key file
  project_id: "your-gcp-project-id"

# === PUBLIC SERVICES (NO CREDENTIALS REQUIRED) ===

GBIF: {}  # Global Biodiversity Information Facility - public API
SoilGrids: {}  # ISRIC SoilGrids - public WCS service
USGS_NWIS: {}  # USGS National Water Information System - public API
OSM_Overpass: {}  # OpenStreetMap Overpass API - public API
WQP: {}  # Water Quality Portal - public API
SSURGO: {}  # USDA Soil Survey - public API

# See docs/CREDENTIALS.md for detailed setup instructions